<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<LangVersion>10</LangVersion>
		<Version>0.5.3</Version>
		<PackageId>Junetic.Common</PackageId>	
		<Authors>Junetic</Authors>
		<PackageDescription>Contains common utilities and extensions</PackageDescription>
		<RepositoryUrl>https://github.com/Zankomag/Junetic.Common.git</RepositoryUrl>
		<PackageProjectUrl>https://github.com/Zankomag/Junetic.Common</PackageProjectUrl>
		<Authors>Zankomag</Authors>
		<Copyright>Copyright Â© Zankomag 2022</Copyright>
		<PackageTags>Junetic</PackageTags>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<EnablePreviewFeatures>true</EnablePreviewFeatures>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="JetBrains.Annotations" Version="2022.1.0" />
		<PackageReference Include="Microsoft.Extensions.Options" Version="6.0.0" />
		<PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="6.0.0" />
		<PackageReference Include="Microsoft.Extensions.Hosting" Version="6.0.0" />
		<PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
	</ItemGroup>

	<ItemGroup>
	  <None Remove="Junetic.Common.csproj.DotSettings" />
	</ItemGroup>

</Project>
